FROM node:12-alpine

# Create app directory
WORKDIR /usr/src/app

COPY ./rabbitMQ/package*.json ./

RUN npm install 

# Bundle app source
COPY ./rabbitMQ/emailServer.js .
COPY ./rabbitMQ/rabbit.js .
COPY ./rabbitMQ/config.js .
COPY ./start.sh .
COPY ./wait-for-it.sh .
RUN ["chmod", "+x", "start.sh"]
RUN ["chmod", "+x", "wait-for-it.sh"]


CMD [ "./start.sh" ]